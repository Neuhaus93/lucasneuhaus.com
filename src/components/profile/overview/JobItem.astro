---
import {
  CodeXmlIcon,
  LightbulbIcon,
  BriefcaseBusinessIcon,
} from "@lucide/astro";
import IntroItem from "./IntroItem.astro";
type Props = {
  title: string;
  website: string;
  company: string;
};
const { title, website, company } = Astro.props;

let JobIcon;
if (/(developer|engineer)/i.test(title)) {
  JobIcon = CodeXmlIcon;
} else if (/(founder|co-founder)/i.test(title)) {
  JobIcon = LightbulbIcon;
} else {
  JobIcon = BriefcaseBusinessIcon;
}
---

<IntroItem>
  <span
    class="flex size-6 shrink-0 items-center justify-center rounded-lg border bg-zinc-50 shadow-xs dark:bg-zinc-900"
    aria-hidden="true"
  >
    <JobIcon />
  </span>

  <Fragment
    slot="content"
    set:html={`${title} @<a class="hover:underline" href=${website} target="_blank" rel="noopener noreferrer">${company}</a>`}
  />
</IntroItem>
